---
import type { GetStaticPaths } from 'astro';
import ResourcesLayout from '../../../layouts/ResourcesLayout.astro';
import ResourceIndex from '../../../components/ResourceIndex.astro';
import { RESOURCE_TYPES } from '../../../utils/resourceTypes';
import { getSortedDateCollection, getStringTags, normalizeTag } from '../../../utils/content';

const posts = await getSortedDateCollection('blog');

export const getStaticPaths: GetStaticPaths = async () => {
  const all = await getSortedDateCollection('blog');
  const tags = Array.from(new Set(all.flatMap((post) => getStringTags(post.data.tags))));
  return tags.map(tag => ({ params: { tag } }));
};

const selectedTag = normalizeTag(String(Astro.params.tag || ''));
const resourceType = RESOURCE_TYPES.blog;
---

<ResourcesLayout
  title={resourceType.indexTitle}
  description={resourceType.indexDescription}
  descriptionClass="desc-black"
  currentPath={resourceType.indexCurrentPath}
>
  <ResourceIndex
    items={posts}
    dateField="date"
    titleField="title"
    selectedTagOverride={selectedTag}
    tagBasePath={resourceType.tagBasePath}
    tagAllPath={resourceType.tagAllPath}
  />
</ResourcesLayout>