---
import { getCollection } from 'astro:content';
import ResourcesLayout from '../../../layouts/ResourcesLayout.astro';
import ResourceIndex from '../../../components/ResourceIndex.astro';
import type { VideoEntry } from '../../../types/collections';
import { RESOURCE_TYPES } from '../../../utils/resourceTypes';

const videos: VideoEntry[] = (await getCollection('videos')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);
const resourceType = RESOURCE_TYPES.videos;
---

<ResourcesLayout
  title={resourceType.indexTitle}
  description={resourceType.indexDescription}
  descriptionClass="desc-black"
  currentPath={resourceType.indexCurrentPath}
>
  <ResourceIndex
    items={videos}
    dateField="date"
    metaField="length"
    titleField="title"
    showBody={false}
  />
</ResourcesLayout>