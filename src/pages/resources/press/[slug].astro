---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import DocsLayout from '../../../layouts/Docs.astro';
import ResourceDetailArticle from '../../../components/ResourceDetailArticle.astro';
import MoreItemsGrid from '../../../components/MoreItemsGrid.astro';
import MoreItemCard from '../../../components/MoreItemCard.astro';
import {
  buildPageUrl,
  getRelatedItems,
  getRequestOrigin,
  getStringTags,
} from '../../../utils/content';
import type { PressEntry } from '../../../types/collections';
import {
  COLOR_BORDER_CARD,
  COLOR_PRIMARY,
  COLOR_TEXT,
  COLOR_TEXT_LIGHT,
} from '../../../utils/colors';
import { RESOURCE_TYPES } from '../../../utils/resourceTypes';

export const getStaticPaths: GetStaticPaths = async () => {
  const pressItems = await getCollection('press');
  return pressItems.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
};

const { item } = Astro.props as { item: PressEntry };
const { Content } = await item.render();
const resourceType = RESOURCE_TYPES.press;

const origin = getRequestOrigin(Astro.request?.url);
const pageUrl = buildPageUrl(origin, `${resourceType.detailBasePath}/${item.slug}/`);
const morePress = getRelatedItems(await getCollection('press'), item.slug, 3);
const itemTags = getStringTags(item.data.tags);
---

<DocsLayout>
  <ResourceDetailArticle
    backHref={resourceType.backHref}
    backLabel={resourceType.backLabel}
    iconName={resourceType.iconName}
    pageUrl={pageUrl}
    shareTitle={item.data.title}
    articleClass="prose blog-prose text-black"
  >
    <Fragment slot="meta">
      <span>{item.data.date.toLocaleDateString()}</span>
      <span class="h-1 w-1 rounded-full" />
      <span>{item.data.outlet}</span>
      {itemTags.length > 0 && (
        <>
          <span class="h-1 w-1 rounded-full bg-[var(--scheme-accent)]" />
          <span class="flex flex-wrap gap-1">
            {itemTags.map((tag) => (
              <span class="tag-chip">
                {tag}
              </span>
            ))}
          </span>
        </>
      )}
    </Fragment>

    <Content />
  </ResourceDetailArticle>

  {/* More press â€“ OUTSIDE article */}
  {morePress.length > 0 && (
    <MoreItemsGrid title={resourceType.moreTitle} accentColor={COLOR_PRIMARY} gridId="more-press-grid">
        {morePress.map((p) => (
          <MoreItemCard
            href={`${resourceType.detailBasePath}/${p.slug}/`}
            title={p.data.title}
            dateText={p.data.date.toLocaleDateString()}
            borderColor={COLOR_BORDER_CARD}
            hoverBorderColor={COLOR_PRIMARY}
            dateStyle={`color: ${COLOR_TEXT_LIGHT};`}
            titleStyle={`color: ${COLOR_TEXT};`}
            secondaryText={p.data.outlet}
            secondaryStyle={`color: ${COLOR_TEXT_LIGHT};`}
          />
        ))}
    </MoreItemsGrid>
  )}
</DocsLayout>