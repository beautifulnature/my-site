---
import ResourcesLayout from '../../../layouts/ResourcesLayout.astro';
import ResourceIndex from '../../../components/ResourceIndex.astro';
import { RESOURCE_TYPES } from '../../../utils/resourceTypes';
import { getSortedDateCollection } from '../../../utils/content';

const events = await getSortedDateCollection('events');
const resourceType = RESOURCE_TYPES.events;
---

<ResourcesLayout
  title={resourceType.indexTitle}
  description={resourceType.indexDescription}
  descriptionClass="desc-black"
  currentPath={resourceType.indexCurrentPath}
>
  <ResourceIndex
    items={events}
    dateField="date"
    metaField="location"
    titleField="title"
    tagBasePath={resourceType.tagBasePath}
    tagAllPath={resourceType.tagAllPath}
  />
</ResourcesLayout>

// If instead you want the hero title to go straight to the external registration URL, set isHeroLinkExternal and heroExternalUrlField.