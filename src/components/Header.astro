---
import { SITE_CONTENT } from "../utils/siteContent";
import { MAIN_NAV_ITEMS, TALK_TO_US_URL } from "../utils/navigation";
---

<header
  class="sticky top-0 z-40 border-b border-slate-200 bg-white/90 backdrop-blur"
>
  <div
    class="layout-content-1575 flex items-center justify-between py-3.5 sm:py-4 vp9:py-4"
  >
    <a href="/" class="flex items-center gap-2">
      <div
        class="h-7 w-7 rounded-lg bg-gradient-to-br from-indigo-500 to-violet-500"
      >
      </div>
      <span
        class="font-semibold tracking-tight text-slate-900"
        >{SITE_CONTENT.siteName}</span
      >
    </a>
    <nav
      aria-label="Main"
      class="hidden items-center gap-6 font-medium text-slate-600 vp9:flex"
      data-main-nav
    >
      {MAIN_NAV_ITEMS.map((item) => (
        <a
          href={item.href}
          class={item.href.startsWith('/') ? 'hover:text-[var(--scheme-accent)]' : 'hover:text-slate-900'}
          data-section-link={item.sectionLink ? true : undefined}
        >
          {item.label}
        </a>
      ))}
    </nav>
    <a
      href={TALK_TO_US_URL}
      class="rounded-full bg-slate-900 px-4 py-2 font-semibold text-white shadow-sm transition hover:bg-black sm:px-5 sm:py-2.5"
    >
      {SITE_CONTENT.talkToUsLabel}
    </a>

    <button
      type="button"
      aria-label="Open menu"
      aria-controls="mobile-nav"
      aria-expanded="false"
      data-mobile-menu-button
      class="ml-2 inline-flex h-9 w-9 items-center justify-center rounded-md border border-slate-300 text-slate-700 vp9:hidden"
    >
      <span aria-hidden="true">â˜°</span>
    </button>
  </div>

  <div
    id="mobile-nav"
    class="hidden border-t border-slate-200 bg-white px-4 py-3 vp9:hidden"
    data-mobile-nav
  >
    <nav
      aria-label="Mobile"
      class="grid gap-1.5 font-medium text-slate-700"
      data-main-nav
    >
      {MAIN_NAV_ITEMS.map((item) => (
        <a
          href={item.href}
          class="rounded-md px-2 py-2 hover:bg-slate-50"
          data-section-link={item.sectionLink ? true : undefined}
        >
          {item.label}
        </a>
      ))}
      <a
        href={TALK_TO_US_URL}
        class="mt-1 rounded-full bg-slate-900 px-4 py-2 text-center font-semibold text-white"
      >
        {SITE_CONTENT.talkToUsLabel}
      </a>
    </nav>
  </div>
</header>