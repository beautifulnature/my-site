      return (
        <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke={color} stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h12v16H4z" />
          <path d="M16 4h1a3 3 0 0 1 3 3v11h-4" />
          <path d="M8 8h4" />
        </svg>
      );
