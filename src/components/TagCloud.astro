---
// Props: tags: string[], selectedTag: string
const { tags = [], selectedTag = '' } = Astro.props;
---
{tags.length > 0 && (
  <div class="flex flex-wrap gap-2 mb-6">
    {tags.map((tag: string) => (
      <button
        type="button"
        class={`rounded-full border px-3 py-1 text-xs uppercase tracking-wide transition-colors ${selectedTag === tag.trim().toLowerCase() ? 'bg-[#4900f8] text-white border-[#4900f8]' : 'border-[#4900f8] text-[#4900f8] bg-white hover:bg-[#4900f8] hover:text-white'}`}
        onclick={`window.location.search='?tag=${encodeURIComponent(tag.trim().toLowerCase())}'`}
      >
        {tag}
      </button>
    ))}
    {selectedTag && (
      <button
        type="button"
        class="rounded-full border border-slate-400 px-3 py-1 text-xs uppercase tracking-wide bg-white text-slate-600 ml-2"
        onclick="window.location.search=''"
