---
interface Props {
  id: string;
  title?: string;
}

const { id, title = 'Video' } = Astro.props;
---

<div class="youtube-embed my-6">
  <iframe
    src={`https://www.youtube.com/embed/${id}?autoplay=0&rel=0`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    loading="lazy"
  ></iframe>
</div>

<style>
  .youtube-embed {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    border-radius: 0.75rem;
    border: 1px solid rgb(30 64 175 / 0.3);
    background-color: rgb(15 23 42 / 0.8);
  }

  .youtube-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
