---
const {
  items = [],
  className = '',
} = Astro.props as {
  items: Array<{ label: string; href: string; active?: boolean }>;
  className?: string;
};

const getChipClass = (active?: boolean) =>
  `c-label c-label--small c-label--light-grey c-label--lower c-label--filter${active ? ' is-active' : ''}`;
---

<div class={className}>
  {items.map((item) => (
    <a href={item.href} class={getChipClass(item.active)}>
      {item.label}
    </a>
  ))}
</div>
