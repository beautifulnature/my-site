---
import '../styles/global.css';

const {
  title = 'Resources',
  description = '',
  currentPath = '',
} = Astro.props;

const linkBase =
  'px-3 py-1 rounded-full border border-slate-700 bg-slate-900/60 hover:border-sky-500 hover:text-sky-300';
const linkActive =
  'px-3 py-1 rounded-full border border-sky-500 bg-slate-900 text-sky-300';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-50">
    <div class="min-h-screen px-4 py-8 md:px-10">
      <header class="max-w-5xl mx-auto mb-8">
        <h1 class="text-3xl font-bold mb-2">{title}</h1>
        {description && (
          <p class="text-slate-300">
            {description}
          </p>
        )}

        <nav class="mt-4 flex flex-wrap gap-3 text-sm text-slate-300">
          <a
            href="/blog"
            class={currentPath === '/blog' ? linkActive : linkBase}
          >
            Blog
          </a>
          <a
            href="/resources/videos"
            class={currentPath === '/resources/videos' ? linkActive : linkBase}
          >
            Videos
          </a>
          <a
            href="/resources/stories"
            class={currentPath === '/resources/stories' ? linkActive : linkBase}
          >
            Customer stories
          </a>
          <a
            href="/resources/events"
            class={currentPath === '/resources/events' ? linkActive : linkBase}
          >
            Events
          </a>
          <a
            href="/resources/press"
            class={currentPath === '/resources/press' ? linkActive : linkBase}
          >
            Press
          </a>
          <a
            href="/resources/newsletter"
            class={
              currentPath === '/resources/newsletter' ? linkActive : linkBase
            }
          >
            Newsletter
          </a>
        </nav>
      </header>

      <main class="max-w-5xl mx-auto">
        <slot />
      </main>
    </div>
  </body>
</html>